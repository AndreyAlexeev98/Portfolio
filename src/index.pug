include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        .parallax
          .parallax__layout 
            +image('content/paralax-test.png', 'parallax__image')
            //- заменить image на picture, чтобы добавить нресколько картинок под разное расширение
        section.hero#hero
          .container
              header.header
                .header__logo
                  .logo АА 
                .header__tabs
                  nav.nav
                    - var items = [["Главная","hero"], ["Обо мне","about"], ["Навыки","values-sec"], ["Работы","#"], ["Отзывы","#"], ["Связаться со мной","#"]];
                    ul.nav__list
                      each item in items
                        li.nav__item
                          a(href='#'+item[1]).nav__link #{item[0]}
                .header__links
                  - var icons = [["insta", "https://github.com/AndreyAlexeev98"], ["vk", "https://www.linkedin.com/comm/in/%D0%B0%D0%BD%D0%B4%D1%80%D0%B5%D0%B9-%D0%B0%D0%BB%D0%B5%D0%BA%D1%81%D0%B5%D0%B5%D0%B2"], ["github", "https://t.me/AndreyAlexeev98"]];
                  ul.socials
                    each item in icons
                      li.socials__item 
                        a(href=item[1],target='_blank').socials__link
                          +icon(item[0], 'socials__icon')
              .hero__content
                .user-data-desc
                  .user-data-desc__first Личный сайт
                  .user-data-desc__second веб разработчика
                h1.user-data-name Алексеев Андрей
              .hero__bottom-btn
                a(href='#about').scroll-down-btn Скролл  
                  +icon('scroll', 'scroll-down-btn__pic') 
        section.section-about#about
          .container
            .about
              .about__user-data
                .user-info
                  .user-info__avatar
                    .avatar 
                      +image('content/aa.jpg', 'avatar__img')
                  .user-info__content 
                    -
                      var userdata = [
                        ['проживаю', 'Санкт-Петербург'],
                        ['возраст', '26 лет'],
                        ['семейное положение', 'Женат']
                      ];
                    table.table.user-info__data 
                      tbody.user-info__data-body
                        each row in userdata
                          tr 
                            td #{row[0]} 
                            td #{row[1]}
              .about__content
                .about__disclaimer Привет! Меня зовут
                h2.about__title Андрей Алексеев
                .about__desc 
                  p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                .about__postscriptum
                  p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      section.values-section#values-sec
          section.triangles.values-section__triangles 
            svg(viewBox='0 0 1000 100' PreserveAspectRatio='none').triangles__item.triangle
              polygon(points='0, 0 0,100 1000, 100')
            svg(viewBox='0 0 1000 100' PreserveAspectRatio='none').triangles__item.triangle
              polygon(points='1000, 0 1000,100 0, 100')
          section.values-section__content 
            -
              var items = [
                ["Front-end", ["HTML", "CSS", "JS", "VUE 3"]],
                ["Workfrow", ["GIT", "Terminal", "WebPack", "Yarn"]],
              ];
            ul.skills-list  
              each row in items 
                li.skills-list__item.skills-row
                  .skills-row__title #{row[0]}
                  ul.skills-row__list
                    each cell in row[1]
                      li.skills-row__item
                        .slill
                          .skill__circle
                          .skill__circle
                          .skill__title= cell
          
