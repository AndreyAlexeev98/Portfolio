mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`).default;
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=`sprite.svg#${icon.id.replace('-usage', '')}`)

mixin image(path, className)
  img(src=require(`images/${path}`).default class=className)

mixin skill(percent, text)
  .skill 
    svg(viewBox='0 0 200 200')
      circle.lol(
        cx='100'
        cy='100'
        r='80'
        fill='darkgrey'
        stroke='#e9e9e9'
        stroke-width='10px'
      )
      circle(
        cx='100'
        cy='100'
        r='80'
        stroke-dasharray='502.4'
        stroke-width='20PX'
        stroke='url(#gradient)'
        style=`animation-delay: -${percent}s`
      )
    .skill__title #{text}

mixin navigation
  nav.nav
    - var items = [["Главная","hero"], ["Обо мне","about"], ["Навыки","values-sec"], ["Работы","#"], ["Отзывы","#"], ["Связаться со мной","#"]];
    ul.nav__list
      each item in items
        li.nav__item
          a(href='#'+item[1]).nav__link #{item[0]}

