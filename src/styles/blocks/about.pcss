.about {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  max-width: 1008px;
  width: 100%;
}

.about__user-data {
    margin-right: 13%;
    width: 375px;
}


.user-info__avatar {
  margin-bottom: 25px; 
} 

.avatar {
  border-radius: 50%;
  overflow: hidden;
  width: 250px;
}

.user-info__content {
    white-space: nowrap;
}

.about__content {
  display: flex;
  flex: auto;
  flex-direction: column;
}

.about__disclaimer {
  margin-bottom: 10px;
}

.about__title {
  margin-bottom: 15px;
}


.about__postscriptum {
  margin-top: auto;
}